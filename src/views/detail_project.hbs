<html lang="en">
  {{! ======== Head ======== }}
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Detail Project</title>
    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
    <link
      rel="stylesheet"
      href="https://kit.fontawesome.com/917179b360.css"
      crossorigin="anonymous"
    />
    <style>
      .container-detail img { max-width: 100%; height:fit-content; border-radius: 5px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); } .technologies p {
      margin-bottom: 0.5rem; } .title { font-size: 2.5rem; font-weight: bold; }
    </style>
  </head>
  {{! ======== Body ======== }}
  <body>
     {{! ===<!-- Header -->=== }}
    <header id="header">
      <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container">
          <a class="navbar-brand" href="/">
            <img
              src="https://dumbways.id/assets/images/brandred.png"
              alt="logo"
              width="40"
            />
          </a>
          <button
            class="navbar-toggler"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target="#navbarNavDropdown"
            aria-controls="navbarNavDropdown"
            aria-expanded="false"
            aria-label="Toggle navigation"
          >
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav w-100 mb-2 mt-2 mb-lg-0">
              {{#if isLogin}}
                <li class="nav-item">
                  <a class="nav-link" href="./add_project">Add Project</a>
                </li>
              {{/if}}
              <li class="nav-item">
                <a class="nav-link" href="./testimonial">My Testimonial</a>
              </li>
            </ul>
            {{#if isLogin}}
              <p
                class="mt-2 my-2 text-capitalize fst-italic fs-5"
                style="width: 200px;"
              >Welcome,<strong>{{user}} </strong> </p>
              <form class="mx-2 my-2" action="/logout" method="POST">
                <button
                  class="btn btn-outline-danger btn-sm btn-lg"
                >Logout</button>
              </form>
            {{else}}
              <a class="nav-link text-secondary" href="/register">Register</a>
              <a class="nav-link text-secondary" href="/login">Login</a>
            {{/if}}
            <a
              class="btn btn-outline-dark btn-sm"
              style="height: 30px; width: 120px;"
              href="./contact"
              role="button"
            >Contact Me</a>
          </div>

        </div>
      </nav>
    </header>

    <!-- Main -->
    <main class="container mt-5">
      <div class="title text-center mb-4">
        <h1>{{data.id}} | {{data.name}}</h1>
      </div>
      <div class="container-detail d-flex" style="justify-content: center; align-items:center">
        <div class="p-2 me-3">
            <img class="img-thumbnail" width="300px" src="/uploads/{{data.image}}" alt="Image-detail"  />
        </div>
        <div class="col-4 image-detail mb-4">
          <div class="duration mb-4">
            <h5 class="duration-title">Duration</h5>
            <p class="duration-date">
              <i class="fa-solid fa-calendar-days fa-xl"></i>
              {{data.start_date}} | {{data.end_date}}
            </p>
            <p class="duration-time">
              <i class="fa-regular fa-clock fa-xl"></i>
              {{data.duration_time}}
            </p>
          </div>
          <div class="technologies">
            <h5 class="technologies-title">Technologies</h5>
            <div class="technologies-content row">
              <div class="technologies-left col-6">
                {{#each data.tecnologies}}
                <p>
                  <img src="/assets/icon/{{this}}.png" alt="{{this}}" style="width: 24px; margin-right: 5px;" width="20"
                    height="20" class="me-2" />
                  {{this}}
                </p>
                {{/each}}
                {{!-- <p>
                  <i class="fa-brands fa-node-js fa-xl"></i>
                  {{data.Technologies2}}
                </p> --}}
              </div>
              {{!-- <div class="technologies-right col-6">
                <p>
                  <i class="fa-brands fa-js fa-xl"></i>
                  {{data.Technologies3}}
                </p>
                <p class="d-flex align-items-center">
                  <img
                    src="https://upload.wikimedia.org/wikipedia/commons/thumb/9/96/Socket-io.svg/800px-Socket-io.svg.png"
                    alt="logo-socket" style="width: 24px; margin-right: 5px;" width="20" height="20" class="me-2" />
                  {{data.Technologies4}}
                </p>
              </div> --}}
            </div>
          </div>
        </div>
      </div>
      <div class="content card p-4">
        <p>
          {{data.description}}
        </p>
      </div>
    </main>

    <!-- Footer -->
    <footer class="text-center mt-5 mb-3">
      &copy; 2023 Dumbways. All rights reserved.
    </footer>

    <!-- Bootstrap JS -->
    <script
      src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"
      integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js"
      integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://kit.fontawesome.com/917179b360.js"
      crossorigin="anonymous"
    ></script>
  </body>
</html>